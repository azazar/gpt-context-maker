    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: main.py",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "args": [
                "--path", "${workspaceFolder}"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: gpt-context-maker",
            "type": "python",
            "python": "/usr/bin/python3",
            "request": "launch",
            "program": "~/.local/bin/gpt-context-maker",
            "args": [
                "--path", "${workspaceFolder}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
    ]
}